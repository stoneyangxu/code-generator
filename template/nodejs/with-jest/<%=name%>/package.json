{
  "name": "<%=name%>",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "babel --watch src --out-dir lib",
    "build": "rm -rf lib && babel src --out-dir lib",
    "lint": "eslint src --fix",
    "test": "jest --watch",
    "coverage": "rm -rf coverage && jest --coverage",
    "precommit": "lint-staged"
  },
  "bin": {
    "<%=name%>": "./bin/<%=name%>.js"
  },
  "files": [
    "lib",
    "src",
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoneyangxu/<%=name%>.git"
  },
  "author": "hityangxu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stoneyangxu/<%=name%>/issues"
  },
  "homepage": "https://github.com/stoneyangxu/<%=name%>#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json,css,md}": [
      "prettier --write",
      "eslint src --fix",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.16.0",
    "fs-extra": "^7.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.2.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^0.14.3",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2"
  }
}
